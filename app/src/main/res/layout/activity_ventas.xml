<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Ventas">

    <!-- Campo para C贸digo de Venta -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_margin="0dp"
        android:fontFamily="sans-serif-black"
        android:text="Ventas"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="277dp"
        android:layout_height="126dp"
        app:srcCompat="@drawable/cliente" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCodigoVenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:hint="C贸digo de Venta"
            android:inputType="text"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Descripci贸n -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripci贸n"
            android:background="@drawable/card_background"
            android:inputType="text"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Precio -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"
            android:inputType="numberDecimal"
            android:background="@drawable/card_background"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Cantidad -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="number"
            android:background="@drawable/card_background"
            android:textColor="@color/black" />


    </com.google.android.material.textfield.TextInputLayout>

    <!-- RecyclerView para mostrar ventas -->
    <EditText
        android:id="@+id/txtFecha"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:ems="10"
        android:background="@drawable/card_background"
        android:hint="@string/txt_fecha"
        android:inputType="date" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDatosVentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_venta_view" />

</LinearLayout>
